SECTIONS{
    . = 0x00000000;
    start : AT(0) { ../start_up/start_up.o ../start_up/sys_init.o }

    . = 0x30000000;
    .text : AT(4096) { *(.text) }

    .rodata ALIGN(4) : AT((LOADADDR(.text)+SIZEOF(.text)+0x3)&~(0x3)) { *(.rodata*) }

    .data ALIGN(4) : AT((LOADADDR(.rodata)+SIZEOF(.rodata)+0x3)&~(0x3)) { *(.data) }

    __bss_start = .;
    .bss ALIGN(4)  : { *(.bss)  *(COMMON)  }
    __bss_end = .;
}
